<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hankarun.gevrek">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivty"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hankarun.gevrek.MainActivity" />
        </activity>
        <activity
            android:name=".GroupMessagesActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hankarun.gevrek.MainActivity" />
        </activity>
        <activity
            android:name=".NewsGroupEditActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hankarun.gevrek.MainActivity" />
        </activity>
        <activity android:name=".AddCourseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hankarun.gevrek.MainActivity" />
        </activity>
        <activity android:name=".CourseDetailsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hankarun.gevrek.MainActivity" />
        </activity>
    </application>

</manifest>